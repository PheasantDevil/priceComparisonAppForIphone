{
  "version": 2,
  "buildCommand": "cd frontend && npm run build:vercel",
  "outputDirectory": "frontend/out",
  "installCommand": "cd frontend && npm install",
  "framework": "nextjs",
  "functions": {},
  "builds": [],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://price-comparison-app-asia-northeast1.run.app/api/$1"
    },
    {
      "source": "/get_prices",
      "destination": "https://price-comparison-app-asia-northeast1.run.app/get_prices"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ],
  "projectSettings": {
    "framework": "nextjs",
    "buildCommand": "cd frontend && npm run build:vercel",
    "outputDirectory": "frontend/out",
    "installCommand": "cd frontend && npm install"
  }
}
