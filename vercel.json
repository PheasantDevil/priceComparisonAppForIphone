{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://price-comparison-app-asia-northeast1.run.app/api/$1"
    },
    {
      "source": "/get_prices",
      "destination": "https://price-comparison-app-asia-northeast1.run.app/get_prices"
    }
  ]
}
