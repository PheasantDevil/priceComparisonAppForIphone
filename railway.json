{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 1 --timeout 120 backend.app:create_app()"
  },
  "service": "web",
  "project": "price-comparison-app",
  "projectId": "4f0bf6cf-f794-41a9-9c8c-1f74bc38ab48",
  "serviceId": "9b4de8d6-2fab-4cc6-80a2-3d742b566990"
}
